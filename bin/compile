echo "Installing gnubg"

gnubg () {
	cd $1
	wget http://gnubg.org/media/sources/gnubg-release-1.05.000-sources.tar.gz
	tar -xzvf gnubg-release-1.05.000-sources.tar.gz
	cd gnubg-1.05.000
	./configure --prefix=$1
	make
	make install
}

INSTALL_DIR=/app/gnubg
mkdir -p ${INSTALL_DIR}
gnubg ${INSTALL_DIR}
